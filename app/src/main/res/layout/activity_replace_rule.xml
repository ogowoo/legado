<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.replace.ReplaceRuleActivity">

    <io.dushu.app.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        app:contentLayout="@layout/view_search"
        app:title="@string/replace_purify" />

    <!-- AI智能提示 -->
    <LinearLayout
        android:id="@+id/card_ai_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/bg_edit">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_ai"
            app:tint="@color/accent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_optimize_hint_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText" />

            <TextView
                android:id="@+id/tv_ai_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_optimize_hint_summary"
                android:textSize="12sp"
                android:textColor="@color/secondaryText"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_ai_optimize"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optimize"
            android:textSize="12sp"
            android:textColor="@color/accent" />

        <ImageButton
            android:id="@+id/btn_close_hint"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_close"
            android:contentDescription="@string/close"
            app:tint="@color/secondaryText" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <io.dushu.app.ui.widget.recycler.scroller.FastScrollRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck" />

    </FrameLayout>

    <io.dushu.app.ui.widget.SelectActionBar
        android:id="@+id/select_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
